--- Unicode.
-- UTF-8 to UCS-4 conversions
--
-- @module irccd.utf8

--- Get the real length of a UTF-8 string.
-- @param str the string
-- @return the length or nil
-- @return the error message
function utf8.length(str)
end

--- Iterate over a UTF-8 string.
-- Returns an iterator which each time it is call, returns the current
-- wide character.
-- @param str the string
-- @return the iterator or nil
-- @return the error message
-- @usage
-- for c in utf8.list("GÃ©rard")
--	print(c)
-- end
function utf8.list(str)
end

--- Convert a UTF-8 string to UCS-4.
-- @param str the string
-- @return the sequence table of unicode characters or nil
-- @return the error message
function utf8.toarray(str)
end

--- Convert the character to a UTF-8 string.
-- @param c the unicode code point
-- @return the UTF-8 string or nil
-- @return the error message
function utf8.tostring(c)
end

--- Convert the UCS-4 table to UTF-8 string.
-- @param seq the sequence of unicode code points
-- @return the UTF-8 string or nil
-- @return the error message
function utf8.tostring(seq)
end

--- Convert the UTF-8 string to upper case.
-- @param str the UTF-8 string
-- @return the UTF-8 upper case string
-- @return the error message
function utf8.toupper(str)
end

--- Convert the unicode array to upper case.
-- @param array the unicode sequence
-- @return the array unicode upper case string
-- @return the error message
function utf8.toupper(array)
end

--- Convert the UTF-8 string to lower case.
-- @param str the UTF-8 string
-- @return the UTF-8 lower case string
-- @return the error message
function utf8.tolower(str)
end

--- Convert the unicode array to lower case.
-- @param array the unicode sequence
-- @return the array unicode lower case string
-- @return the error message
function utf8.tolower(array)
end